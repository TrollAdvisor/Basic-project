<form action="/profile/edit/{{user._id}}" method="POST" id="form-container" enctype="multipart/form-data">
  <div class="form-group">
    <label for="profilePic">Profile Pic</label>
    <p>{{req.user}}</p>
    <input type="file" class="form-control-file" id="profilePic" name="profilePic" value="{{user.profilePic}}">
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="username">Username</label>
      <input id='username' type="text" name='username' value="{{user.username}}">
    </div>

    <div class="form-group col-md-6">
      {{user.email}}
    </div>
  </div>
{{#if user.isRestaurant}}
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" placeholder="1234 Main St" value="{{user.adress}}">
  </div>
  
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="city">City</label>
      <input type="text" class="form-control" id="city" name='city' value="{{user.city}}">
    </div>
{{/if}}    
    <div class="form-group">
    <label for="bio">Bio</label>
    <textarea class="form-control" id="bio" rows="3" value="{{user.bio}}"></textarea>
  </div>
  </div>
  
  <button type="submit" class="btn btn-primary">Save</button>
  {{#if message }}
<div class="error-message">{{ message }}</div>
{{/if}}
</form>
