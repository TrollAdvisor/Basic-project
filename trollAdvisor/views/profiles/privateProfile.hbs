<h1>Welcome to your profile, {{user.username}}!</h1>


<a href="/profile/edit/{{user._id}}">Edit my profile</a>
{{!-- <a href="/profile/search">List all users</a> --}}

{{#if user.isRestaurant}}
<h3>Your info:</h3>
<section id='restaurantinfo'>
<img src='{{user.profilePic}}' alt='profilePic'>  
<p>email: {{user.email}}</p>
<p>Address: {{user.address}}</p>
<p>City: {{user.city}}</p>
</section>
<h3>Search for a customer:</h3>
{{#each rest}}
<a href="publicProfile/{{_id}}">{{username}}</a> <br>
{{/each}}
{{else}}
<h3>Your info:</h3>
<section id='customerinfo'>
<img src='{{user.profilePic}}' alt='profilePic'>  
<p>email: {{user.email}}</p>
<p>Bio: {{user.bio}}</p>
</section>
<h3>Your received valorations</h3>
{{#each rev}}
<a href="publicProfile/{{_id}}">{{reviewText}}</a> <br>
{{/each}}
{{/if}}





